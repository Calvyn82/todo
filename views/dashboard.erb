<h1>Dashboard</h1>
<p>Hello <%= h user.first_name %></p>
<form id="new_item_form" action="/" method="POST">
  <% unless item.new? %>
    <p>Your item could not be saved because</p>
    <ul>
      <% item.errors.each do |error| %>
        <li><%= h error %></li>
      <% end %>
    </ul>
  <% end %>
  <input type="text" placeholder="Task" name="task" value="<%= h item.task %>">
  <input type="text" placeholder="Notes" name="notes" value="<%= h item.notes %>">
  <input type="submit" value="Submit">
</form>
<ul>
  <% user.items.each do |item| %>
    <li><%= h item.task %>: <%= h item.notes %>  --added <%= item.created_at.strftime("%c") %>  <form id="delete" action="/delete/<%= h item.id %>" method="POST"><input type="submit" value="Delete"></form></li>
  <% end %>
</ul>
<form id="logout" action="/logout" method="POST">
  <input type="submit" value="Logout">
</form>
